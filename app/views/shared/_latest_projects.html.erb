<div class="latest-projects col-md-6 col-sm-12 mb-sm-2">
  <div class="card">
    <div class="card-header d-flex justify-content-center">
      <h4 class="card-title mt-auto mb-auto"><%= t('strings.resources.newest_resources', resource: Project.model_name.human) %></h4>
    </div>
    <div class="">
      <table class='content-table'>
        <thead class="text-uppercase">
          <tr>
            <th><%= Project.human_attribute_name('name') %></th>
            <th class='d-none d-sm-table-cell'><%= t('datetime.created_at') %></th>
            <th><%= Project.human_attribute_name('target_end_date') %></th>
          </tr>
        </thead>
          <tbody>
            <% unless @projects.empty? %>
              <% @projects.each do |p| %>
                <tr data-href=<%= project_url(p.id)%>>
                  <td><%= p.name %></td>
                  <td class='d-none d-sm-table-cell'><%= p.created_at.strftime("%Y/%m/%d %H:%M") %></td>
                  <td><%= p.target_end_date.strftime("%Y/%m/%d") %></td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="2" class='text-center'><%= t('strings.resources.no_resource_yet', resource: Project.model_name.human.downcase) %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>
