<div class="container">
  <div class="card">
    <div class="card-header">
      <h4 class="card-title">
        <%= t('strings.resources.add_resource', resource: Ticket.model_name.human) %>
      </h4>
      <h5 class="card-subtitle">
        <%= t('strings.tickets.added_to_project', name: @project.name) %>
      </h5>
    </div>
    <div class="card-body">
      <%= form_with(model: @ticket, url: project_tickets_path, method: :post, local: true) do |f| %>

        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>

        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
        
        <%= f.label :date_identified %>
        <%= f.date_field :date_identified, class: 'form-control' %>

        <%= f.label :priority %>
        <%= f.select :priority_id, Priority.all.collect{ |p| [ p.name, p.id ] }, class: 'form-control' %>

        <%= f.label :status %>
        <%= f.select :status_id, Status.all.collect{ |s| [ s.name, s.id ] }, class: 'form-control' %>
        <br>

        <%= f.label :user_id, t('strings.tickets.assigned_developer') %>
        <%= f.select :user_id, User.where(role_id: 1).collect{ |u| [u.name, u.id ] }, class: 'form-control' %>
        <br>

        <%= f.label :target_resolution_date %>
        <%= f.date_field :target_resolution_date, class: 'form-control' %>

        <div class="form-group mt-2 d-flex justify-content-center">
          <%= button_tag(class: 'btn btn-circle ok-btn btn-lg') do %>
                  <i class="fas fa-check"></i>
          <% end %>

          <%= link_to @project, class: 'btn btn-circle delete-btn btn-lg' do %>
            <i class="fas fa-times"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>