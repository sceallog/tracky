<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                  <div class="p-5">
                      <div class="text-center">
                          <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                      </div>
                      <%= form_with(model: @user, url: user_session_path, local: true, class: 'user') do |f| %>
                          <div class="form-group">
                            <%= f.email_field :email, autofill: 'email', placeholder: true, class: 'form-control form-control-user' %>
                          </div>
                          <div class="form-group">
                            <%= f.password_field :password, autofill: 'password', placeholder: true, class: 'form-control form-control-user' %>
                          </div>
                          <div class="form-group">
                            <div class="custom-control custom-checkbox small">
                              <%= f.check_box :remember_me, class: 'custom-control-input' %>
                              <%= f.label :remember_me, class: 'custom-control-label' %>
                            </div>
                          </div>
                          <%= f.submit 'Login', class: 'btn btn-primary btn-user btn-block' %>
                          <hr>
                          <%= link_to user_google_oauth2_omniauth_authorize_path, class: 'btn btn-google btn-user btn-block' do %>
                            <i class="fab fa-google fa-fw"></i> Login with Google
                          <% end %>
                          <a href="index.html" class="btn btn-google btn-user btn-block">
                              <i class="fab fa-google fa-fw"></i> Login with Google
                          </a>
                      <% end %>
                      <hr>
                      <div class="text-center">
                          <a class="small" href="forgot-password.html">Forgot Password?</a>
                      </div>
                      <div class="text-center">
                          <a class="small" href="register.html">Create an Account!</a>
                      </div>
                  </div>
                </div>
            </div>
        </div>

    </div>

</div>