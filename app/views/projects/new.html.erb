<div class="container">
  <div class="card">
    <div class="card-header d-flex">
      <h4 class="card-title mt-auto mb-auto">
        <%= t('strings.resources.add_resource', resource: Project.model_name.human) %>
      </h4>
    </div>
    <div class="card-body">
      <%= form_with(model: @project, local: true) do |f| %>
        <div class="form-group col-lg">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control mb-3' %>
        </div>
        <div class="form-group col-lg">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control mb-3 %>
        </div>
        <div class="form-group col-lg">
          <%= f.label :start_date %>
          <%= f.date_field :start_date, class: 'form-control mb-3' %>
        </div>
        <div class="form-group col-lg">
          <%= f.label :target_end_date %>
          <%= f.date_field :target_end_date, class: 'form-control' %>
        </div>

        <div class="form-group mt-2 d-flex justify-content-center">
          <%= button_tag(class: 'btn btn-circle ok-btn btn-lg', title: t('links.save'), data: { toggle: 'tooltip', delay: {'show': 300, 'hide': 100 } }) do %>
                  <i class="fas fa-check"></i>
          <% end %>

          <%= link_to projects_path, class: 'btn btn-circle delete-btn btn-lg', title: t('links.cancel'), data: { toggle: 'tooltip', delay: {'show': 300, 'hide': 100 } } do %>
            <i class="fas fa-times"></i>
          <% end %>
        </div>

      <% end %>
    </div>
  </div>
</div>
